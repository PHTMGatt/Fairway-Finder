{
  "name": "server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "watch:build": "tsc --watch",
    "watch:serve": "nodemon --watch dist --ext js --exec \"node dist/server.js\"",
    "dev": "concurrently \"npm run watch:build\" \"npm run watch:serve\"",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^8.4.3",
    "node-fetch": "^2.7.0",
    "server": "file:"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.9",
    "typescript": "^5.8.3"
  }
}
